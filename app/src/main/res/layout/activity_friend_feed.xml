<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aldomora.petagram.friendFeed">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profilePicFriend"
        android:layout_marginTop="@dimen/spacing"
        android:layout_width="@dimen/pictureSize"
        android:layout_height="@dimen/pictureSize"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/shiba"/>
    <TextView
        android:id="@+id/tvUserFriend"
        android:layout_marginTop="@dimen/interSpace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:text="User"
        />
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:id="@+id/rvFriend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            />
    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>
